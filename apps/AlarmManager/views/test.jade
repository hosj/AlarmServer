doctype html
html(ng-app='Demo', ng-controller='AppController')
  head
    meta(charset='utf-8')
    |  
    |     
    title
      | My Approach To Building AngularJS Directives
    |  
    |     
    style(type='text/css').
      ul.sensors {
      list-style-type: none ;
      margin: 0px 0px 0px 0px ;
      padding: 0px 0px 0px 0px ;
      width: 400px ;
      }
      ul.sensors li {
      border: 1px solid #CCCCCC ;
      margin: 0px 0px 7px 0px ;
      padding: 10px 10px 10px 10px ;
      position: relative ;
      }
      ul.sensors a {
      color: #CCCCCC ;
      right: 10px ;
      position: absolute ;
      }
      ul.sensors a:hover {
      color: #CC0000 ;
      }
  body
    h1
      | My Approach To Building AngularJS Directives
    // BEGIN: New Sensor Form.
    form(ng-submit='addSensor()')
      p
        input(type='text', ng-model='newSensorName', size='30')
        |             
        input(type='submit', value='Add Sensor')
    // END: New Sensor Form.
    // BEGIN: Sensor List.
    ul.sensors
      li(ng-repeat='sensor in sensors')
        | {{ sensor.name }}
        a(ng-click='removeSensor( sensor )') Remove
    // END: Sensor List.
    // Load jQuery and AngularJS from the CDN.
    script(type='text/javascript', src='//code.jquery.com/jquery-2.0.0.min.js')
    script(type='text/javascript', src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js')
    script(type='text/javascript', src='javascripts/test.js')
